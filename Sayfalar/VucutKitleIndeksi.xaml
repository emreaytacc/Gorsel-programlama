<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Emre.Sayfalar.VucutKitleIndeksi">

    <StackLayout Padding="20">
        <Label Text="Vücut Kitle İndeksi Hesaplama" FontSize="24" HorizontalOptions="Center" Margin="0,20,0,40" />

        <StackLayout Orientation="Horizontal">
            <Label Text="Boy (metre):" VerticalOptions="Center" WidthRequest="150" />
            <Entry Placeholder="Örn: 1.75" Keyboard="Numeric" x:Name="txtBoy" />
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Label Text="Kilo (kg):" VerticalOptions="Center" WidthRequest="150" />
            <Entry Placeholder="Örn: 70" Keyboard="Numeric" x:Name="txtKilo" />
        </StackLayout>

        <Button Text="Hesapla" Clicked="Hesapla_Clicked" HorizontalOptions="Center" Margin="0,20" />

        <Label x:Name="lblSonuc" FontSize="20" HorizontalOptions="Center" Margin="0,20" />
    </StackLayout>
</ContentPage>
